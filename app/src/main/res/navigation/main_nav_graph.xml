<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homePageFragment">

    <fragment
        android:id="@+id/homePageFragment"
        android:name="com.example.work_shifts.Fragments.HomePageFragment"
        tools:layout="@layout/home_page"
        android:label="HomePageFragment" >
        <action
            android:id="@+id/action_homePageFragment_to_paySlipFrag"
            app:destination="@id/paySlipFrag" />
        <action
            android:id="@+id/action_homePageFragment_to_personalInfoFrag"
            app:destination="@id/personalInfoFrag" />
        <action
            android:id="@+id/action_homePageFragment_to_myShiftFrag"
            app:destination="@id/myShiftFrag" />
        <action
            android:id="@+id/action_homePageFragment_to_addShiftFrag"
            app:destination="@id/addShiftFrag" />
    </fragment>
    <fragment
        android:id="@+id/paySlipFrag"
        android:name="com.example.work_shifts.Fragments.paySlipFrag"
        tools:layout="@layout/pay_slip"
        android:label="paySlipFrag" >
        <action
            android:id="@+id/action_paySlipFrag_to_showFrag"
            app:destination="@id/showFrag" />
    </fragment>
    <fragment
        android:id="@+id/showFrag"
        android:name="com.example.work_shifts.Fragments.showFrag"
        tools:layout="@layout/show"
        android:label="showFrag" />
    <fragment
        android:id="@+id/personalInfoFrag"
        android:name="com.example.work_shifts.Fragments.personalInfoFrag"
        tools:layout="@layout/personal_info"
        android:label="personalInfoFrag" >
        <action
            android:id="@+id/action_personalInfoFrag_to_updateInfoFrag"
            app:destination="@id/updateInfoFrag" />
        <action
            android:id="@+id/action_personalInfoFrag_to_reportFrag"
            app:destination="@id/reportFrag" />
    </fragment>
    <fragment
        android:id="@+id/updateInfoFrag"
        android:name="com.example.work_shifts.Fragments.updateInfoFrag"
        tools:layout="@layout/update_info"
        android:label="updateInfoFrag" />
    <fragment
        android:id="@+id/reportFrag"
        android:name="com.example.work_shifts.Fragments.reportFrag"
        tools:layout="@layout/report"
        android:label="reportFrag" />
    <fragment
        android:id="@+id/myShiftFrag"
        android:name="com.example.work_shifts.Fragments.myShiftFrag"
        tools:layout="@layout/my_shift"
        android:label="myShiftFrag" >
        <action
            android:id="@+id/action_myShiftFrag_to_deleteShiftFrag"
            app:destination="@id/deleteShiftFrag" />
    </fragment>
    <fragment
        android:id="@+id/addShiftFrag"
        android:name="com.example.work_shifts.Fragments.addShiftFrag"
        tools:layout="@layout/add_shift"
        android:label="addShiftFrag" />
    <fragment
        android:id="@+id/deleteShiftFrag"
        android:name="com.example.work_shifts.Fragments.deleteShiftFrag"
        tools:layout="@layout/delete_shift"
        android:label="deleteShiftFrag" />


</navigation>