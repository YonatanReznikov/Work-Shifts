<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="12dp"
        android:background="@color/primaryColor"
        android:paddingHorizontal="16dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Dashboard"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <!-- Shifts RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/shiftRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/topBar"
        android:layout_above="@id/bottomNavigation"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:background="@android:color/white"
        android:elevation="2dp" />

    <!-- Schedule Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schedule"
        android:layout_below="@id/shiftRecyclerView"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:padding="12dp"
        android:elevation="4dp"
        android:background="@android:color/white">

        <Button
            android:id="@+id/btnPaySlip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            android:backgroundTint="#1E293B"
            android:textColor="@android:color/white"
            android:text="Pay Slip"
            android:elevation="2dp"
            android:paddingVertical="12dp" />

        <Button
            android:id="@+id/btnSchedule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            android:backgroundTint="#0F766E"
            android:textColor="@android:color/white"
            android:text="Request"
            android:elevation="2dp"
            android:paddingVertical="12dp" />

        <Button
            android:id="@+id/btnPersonalInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            android:backgroundTint="#D97706"
            android:textColor="@android:color/white"
            android:text="Personal Info"
            android:elevation="2dp"
            android:paddingVertical="12dp" />
    </LinearLayout>
</RelativeLayout>